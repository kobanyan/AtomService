{
  "name": "AtomService",
  "version": "1.0.0",
  "description": "A Google Apps Script library to marshal the Atom Feed object to an Atom xml string.",
  "private": true,
  "author": {
    "name": "kobanyan"
  },
  "license": "MIT",
  "main": "AtomService.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kobanyan/AtomService.git"
  },
  "bugs": {
    "url": "https://github.com/kobanyan/AtomService/issues"
  },
  "keywords": [
    "gas",
    "atom"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/google-apps-script": "0.0.27",
    "@types/jest": "^23.3.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "build": "run-s compile clear",
    "clasp:push": "clasp push",
    "clear": "rimraf AtomService.js",
    "compile": "tsc -d AtomService.ts",
    "debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "tslint --fix '**/*.ts'",
    "push": "run-s lint build clasp:push",
    "prettier": "prettier --write '**/*.ts'",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
